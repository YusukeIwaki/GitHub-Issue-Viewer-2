<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.yusukeiwaki.githubviewer2">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:name="io.github.yusukeiwaki.githubviewer2.GitHubViewerApplication">
        <activity android:name="io.github.yusukeiwaki.githubviewer2.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.github.yusukeiwaki.githubviewer2.login.LoginActivity"/>
        <activity-alias
            android:name="GitHubCallbackActivity"
            android:targetActivity="io.github.yusukeiwaki.githubviewer2.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/github_oauth_callback_scheme"
                    android:host="@string/github_oauth_callback_host"
                    android:pathPrefix="@string/github_oauth_callback_path" />
            </intent-filter>
        </activity-alias>

        <service android:name="io.github.yusukeiwaki.githubviewer2.service.GitHubViewerService"/>
        <service android:name="io.github.yusukeiwaki.githubviewer2.background_fetch.BackgroundFetchService"/>
        <service android:name="io.github.yusukeiwaki.githubviewer2.background_fetch.NotificationDismissalCallbackService"/>
    </application>

</manifest>